div(
    class="mainHeader"
)
    div(
        class="flyInfo"
    )
        h1(
        class="flyData"
        ) {{$ctrl.title}}

    div(
        class="userInfo"
    )
        h2 User
        div(
            class="userInfoData"
        )
            div id: {{$ctrl.user.id}}
            div balance: {{$ctrl.user.balance}}

    div(
        class="clearfix"
    )

div(
    class="seatHolder"
)
    div(
        class="planeHead"
    )
        h2 Seat plan

    div(
        class="fuselage"
    )
        div(
            class="exitHolder topExit"
        )

        ul(
            class="seatList"
        )
            li(
                class="seat"
                ng-repeat="seat in $ctrl.seats track by seat.id"
                ng-click="$ctrl.chooseSeat(seat)"
                ng-class="{available: seat.available}"
            )
                span {{seat.number}}

        div(
            class="exitHolder bottomExit"
        )

chosen-seat(ng-if="$ctrl.chosenSeat")
